container_commands:
  01-no_dev:
    command: "/usr/bin/composer.phar install --optimize-autoloader"
  02-config_clear:
    command: "php artisan config:clear"
  03-view_clear:
    command: "php artisan view:clear"
  04-route_cache:
    command: "php artisan route:cache"
  05-view_cache:
    command: "php artisan view:cache"
  06-chmod_storage:
    command: "chmod 775 storage -R"
  07-chmod_bootstrap:
    command: "chmod 775 bootstrap -R"
  08-migrate:
    command: "php artisan migrate:fresh --seed"
  09-link:
    command: "ln -s ../storage/app/public public/storage"
  10-npm:
    command: "npm install"
  11-npm_dependencies:
    command: "npm run build"

files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/laravel-logs.conf":
    content: /var/app/current/storage/logs/laravel.log
    group: root
    mode: "000755"
    owner: root

  "/etc/php.d/custom.ini":
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 10M
      post_max_size = 10M

option_settings:
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx

  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /images: staticimages

  aws:elasticbeanstalk:container:php:phpini:
    document_root: /public
    memory_limit: 256M
    zlib.output_compression: "Off"
    allow_url_fopen: "On"
    display_errors: "Off"
    max_execution_time: 60
    composer_options: vendor/package
