commands:
  01-update-composer:
    command: "export COMPOSER_HOME=/usr/local/bin && /usr/local/bin/composer self-update"

option_settings:
  - namespace: aws:elasticbeanstalk:application:environment
    option_name: COMPOSER_HOME
    value: /usr/local/bin

container_commands:
  01-optimize:
    command: "php /var/www/html/artisan optimize"
